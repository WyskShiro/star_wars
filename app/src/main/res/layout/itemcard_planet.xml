<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:padding="5sp"
>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv"
            app:cardCornerRadius="10sp"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
        >

            <TextView
                    android:id="@+id/name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*************"/>


            <TextView
                    android:id="@+id/gravity_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/name_textview"
                    android:text="****************"/>


            <TextView
                    android:id="@+id/climate_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_textview"
                    android:text="*************"/>


            <TextView
                    android:id="@+id/orbitalperiod_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/gravity_textview"
                    android:text="****************"/>


            <TextView
                    android:id="@+id/population_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/climate_textview"
                    android:text="******************************"/>


            <TextView
                    android:id="@+id/rotationperiod_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/orbitalperiod_textview"
                    android:text="****************"/>



            <TextView
                    android:id="@+id/terrain_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/population_textview"
                    android:text="******************************"/>


            <TextView
                    android:id="@+id/surfacewater_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/rotationperiod_textview"
                    android:text="****************"/>


            <TextView
                    android:id="@+id/diameter_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/terrain_textview"
                    android:text="******************************"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

